<odoo>
  <record id="action_recv_charts_url" model="ir.actions.act_url">
    <field name="name">Receivables – Charts</field>
    <field name="type">ir.actions.act_url</field>
    <field name="url">/recv/charts</field>
    <field name="target">self</field>
  </record>

  <record id="action_recv_dashboard_url" model="ir.actions.act_url">
    <field name="name">Receivables – Dashboard</field>
    <field name="type">ir.actions.act_url</field>
    <field name="url">/recv/dashboard</field>
    <field name="target">self</field>
  </record>

  <menuitem id="menu_recv_root" name="Receivables (Live)"
            action="action_recv_charts_url"
            groups="base.group_user,base.group_system" sequence="30"/>

  <menuitem id="menu_recv_dashboard" name="Dashboard (Table)"
            parent="menu_recv_root" action="action_recv_dashboard_url" sequence="10"/>
</odoo>
